{
  "name": "next-s3-uploader",
  "version": "0.3.0",
  "author": "Abhay Ramesh",
  "license": "MIT",
  "description": "A simple way to upload files to S3 from a Next.js app directory (aws s3, minio, or any s3 compatible service)",
  "repository": {
    "type": "git",
    "url": "https://github.com/abhay-ramesh/next-s3-uploader.git"
  },
  "homepage": "https://next-s3-uploader.abhayramesh.com",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "build:analyze": "pnpm build && pnpm bundle:analyze",
    "bundle:analyze": "npx bundlesize && ls -la dist/ && gzip-size-cli dist/*.js dist/*.mjs",
    "bundle:visualize": "npx esbuild-visualizer dist/index.js --open",
    "size-check": "bundlesize",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build",
    "maintenance:health": "./scripts/health-check.sh",
    "maintenance:deps": "./scripts/update-deps.sh",
    "release:changeset": "pnpm changeset && pnpm changeset version && pnpm changeset publish",
    "release:preview": "pnpm changeset status",
    "release:snapshot": "pnpm changeset version --snapshot && pnpm changeset publish --tag snapshot",
    "release:patch": "pnpm changeset add --type patch && pnpm changeset version && pnpm changeset publish",
    "validate-changesets": "node ./scripts/changeset-validator.js"
  },
  "keywords": [
    "nextjs",
    "s3",
    "minio",
    "upload",
    "react",
    "nextjs app directory",
    "nextjs app folder",
    "nextjs 13 app directory file upload",
    "aws",
    "aws-s3",
    "file-upload",
    "multipart-upload",
    "chunked-upload"
  ],
  "dependencies": {
    "@aws-sdk/client-s3": "^3.427.0",
    "@aws-sdk/s3-request-presigner": "^3.427.0"
  },
  "optionalDependencies": {
    "@aws-sdk/signature-v4-multi-region": "^3.425.0",
    "aws-crt": "^1.18.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.1",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^18.15.11",
    "@types/react": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitejs/plugin-react": "^4.1.0",
    "@vitest/coverage-v8": "^0.34.6",
    "bundlesize": "^0.18.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "gzip-size-cli": "^5.1.0",
    "happy-dom": "^12.9.1",
    "next": "^15.3.3",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "size-limit": "^11.0.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": ">=18.0.0",
    "zod": ">=3.20.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "sideEffects": false,
  "size-limit": [
    {
      "name": "Client bundle (ESM)",
      "path": "dist/client.mjs",
      "limit": "5 KB",
      "gzip": true,
      "ignore": [
        "@aws-sdk/*",
        "aws-crt",
        "next",
        "react"
      ]
    },
    {
      "name": "Server bundle (ESM)",
      "path": "dist/server.mjs",
      "limit": "10 KB",
      "gzip": true,
      "ignore": [
        "@aws-sdk/*",
        "aws-crt",
        "next"
      ]
    },
    {
      "name": "Main bundle (ESM)",
      "path": "dist/index.mjs",
      "limit": "7 KB",
      "gzip": true,
      "ignore": [
        "@aws-sdk/*",
        "aws-crt",
        "next",
        "react"
      ]
    }
  ],
  "bundlesize": [
    {
      "path": "./dist/client.js",
      "maxSize": "15kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/server.js",
      "maxSize": "25kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/index.js",
      "maxSize": "20kb",
      "compression": "gzip"
    }
  ]
}