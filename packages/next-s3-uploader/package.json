{
  "name": "next-s3-uploader",
  "version": "0.2.1",
  "author": "Abhay Ramesh",
  "license": "MIT",
  "description": "A simple way to upload files to S3 from a Next.js app directory (aws s3, minio, or any s3 compatible service)",
  "repository": {
    "type": "git",
    "url": "https://github.com/abhay-ramesh/next-s3-uploader.git"
  },
  "homepage": "https://next-s3-uploader.abhayramesh.com",
  "main": "./dist/index.js",
  "types": "./dist/index.d.mts",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server.mjs",
      "require": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./client": {
      "import": "./dist/client.mjs",
      "require": "./dist/client.js",
      "types": "./dist/client.d.ts"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "build": "tsup src/index.ts src/server.ts src/client.ts --format cjs,esm --dts --minify --clean --external react",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "ci": "pnpm run lint && pnpm run typecheck && pnpm run test && pnpm run build",
    "prepublishOnly": "pnpm run ci"
  },
  "keywords": [
    "nextjs",
    "s3",
    "minio",
    "upload",
    "react",
    "nextjs app directory",
    "nextjs app folder",
    "nextjs 13 app directory file upload",
    "aws",
    "aws-s3",
    "file-upload",
    "multipart-upload",
    "chunked-upload"
  ],
  "dependencies": {
    "@aws-sdk/client-s3": "^3.427.0",
    "@aws-sdk/s3-request-presigner": "^3.427.0",
    "@aws-sdk/signature-v4-multi-region": "^3.425.0",
    "aws-crt": "^1.18.0",
    "next": "^15.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^18.15.11",
    "@types/react": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitejs/plugin-react": "^4.1.0",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "happy-dom": "^12.9.1",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "sideEffects": false
}